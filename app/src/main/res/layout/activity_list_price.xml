<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.t420.simplystowmockups.ListPrice">

    <ProgressBar
        android:id="@+id/listprogress"
        android:layout_width="match_parent"
        android:layout_height="25px"
        android:progressDrawable="@drawable/coral_progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:progress="75"/>

    <LinearLayout
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_below="@id/listprogress"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width = "0px"
            android:layout_height="100px"
            android:layout_weight="1"
            android:src="@drawable/back"
            android:onClick="goBack"
            android:background="#ffffff"/>

        <ImageView
            android:layout_width="0px"
            android:layout_weight="4"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/baseprice"
        android:layout_below="@id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fab_margin"
        android:textStyle="bold"
        android:text="Base Price"
        android:textColor="#696969"
        android:layout_centerHorizontal="true"
        android:textSize="73px"/>

    <TextView
        android:id="@+id/bpexplain"
        android:layout_below="@id/baseprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fab_margin"
        android:text="Your base price is your default monthly rate. You can change the setting to charge daily or weekly too."
        android:textColor="#696969"
        android:layout_centerHorizontal="true"
        android:textSize="40px"/>

    <LinearLayout
        android:id="@+id/price"
        android:layout_marginTop="@dimen/fab_margin"
        android:layout_below="@id/bpexplain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"/>

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textColor="#696969"
            android:layout_weight="2"
            android:textSize="40px"/>

        <ImageView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"/>

        <EditText
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:background="#dcdcdc"
            android:layout_weight="1.5"/>

        <ImageView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"/>

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:text="per"
            android:textColor="#696969"
            android:layout_weight="0.75"
            android:textSize="40px"/>

        <Spinner
            android:id="@+id/bptype"
            android:layout_width="0px"
            android:background="#dcdcdc"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_weight="2"/>

        <ImageView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/feat1"
        android:layout_marginTop="@dimen/fab_margin"
        android:layout_below="@id/price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"/>

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:text="Features"
            android:textColor="#696969"
            android:layout_weight="2"
            android:textSize="40px"/>

        <ImageView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#dcdcdc" />

        <ImageView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"/>

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:text="Pet-free"
            android:textColor="#696969"
            android:layout_weight="1"
            android:textSize="30px"/>

        <ImageView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#dcdcdc" />

        <ImageView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"/>

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:text="Smoke-free"
            android:textColor="#696969"
            android:layout_weight="1.5"
            android:textSize="30px"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/feat2"
        android:layout_marginTop="@dimen/fab_margin"
        android:layout_below="@id/feat1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"/>

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#696969"
            android:layout_weight="2"
            android:textSize="40px"/>

        <ImageView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#dcdcdc" />

        <ImageView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"/>

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:text="CCTV"
            android:textColor="#696969"
            android:layout_weight="1"
            android:textSize="30px"/>

        <ImageView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#dcdcdc" />

        <ImageView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"/>

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:text="Locked"
            android:textColor="#696969"
            android:layout_weight="1.5"
            android:textSize="30px"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/feat3"
        android:layout_marginTop="@dimen/fab_margin"
        android:layout_below="@id/feat2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"/>

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#696969"
            android:layout_weight="1.05"
            android:textSize="40px"/>

        <ImageView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.001"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#dcdcdc" />

        <ImageView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"/>

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:text="Climate Control"
            android:textColor="#696969"
            android:layout_weight="2"
            android:textSize="30px"/>


    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/feat3"
        android:layout_marginTop="@dimen/fab_margin"
        android:text="Next"
        android:background="#f76f60"
        android:onClick="previewScreen"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>
